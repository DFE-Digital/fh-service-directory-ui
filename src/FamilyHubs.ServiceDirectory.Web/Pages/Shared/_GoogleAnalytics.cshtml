@inject IConfiguration Configuration

@{
    string gaMeasurementId = Configuration.GetValue<string>("GA_MEASUREMENT_ID") ?? string.Empty;

    if (gaMeasurementId != "")
    {
        var gaMeasurementUrl = $"https://www.googletagmanager.com/gtag/js?id={gaMeasurementId}";

        <script>
            window.GA_MEASUREMENT_ID = '@gaMeasurementId';
            window.GA_MEASUREMENT_URL = '@gaMeasurementUrl';
        </script>
    }
}