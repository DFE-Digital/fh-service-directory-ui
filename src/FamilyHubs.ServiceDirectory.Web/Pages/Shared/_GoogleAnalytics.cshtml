@inject IConfiguration Configuration

@{
    string gaMeasurementId = Configuration.GetValue<string>("GA_MEASUREMENT_ID") ?? string.Empty;

    if (gaMeasurementId != "")
    {
        var googleAnalyticsUrl = $"https://www.googletagmanager.com/gtag/js?id={gaMeasurementId}";

        <script async src='@googleAnalyticsUrl'></script>
        <script>
            const GA_MEASUREMENT_ID = '@gaMeasurementId';
        </script>
    }
}