@*todo: better name for summarylistrow and summarylistrows*@

@model (string Key, IEnumerable<string> Values)

@if (Model.Values.Any())
{
    var values = string.Join(", ", Model.Values);
    @if (!string.IsNullOrWhiteSpace(values))
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                @Model.Key
            </dt>
            <dd class="govuk-summary-list__value">
                @* todo: add and use fh-pre-wrap instead (safer!) *@
                @Html.Raw(values)
            </dd>
        </div>
    }
}