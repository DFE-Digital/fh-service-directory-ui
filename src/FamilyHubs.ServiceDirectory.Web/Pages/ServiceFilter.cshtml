@page
@model FamilyHubs.ServiceDirectory.Web.Pages.ServiceFilterModel
@{
    ViewData["Title"] = "Your local family hubs, services and activities";
}

@section Back {
    <a asp-page="/PostcodeSearch" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l govuk-!-margin-bottom-4">Your local family hubs, services and activities</h1>
      
        <span class="govuk-caption-m govuk-!-margin-bottom-2 govuk-!-margin-top-4">Showing results for: <a asp-page="/PostcodeSearch">@Model.Postcode?.ToUpperInvariant()</a></span>

    </div>
</div>

