@page
@model FamilyHubs.ServiceDirectory.Web.Pages.PostcodeSearchModel
@{
    ViewData["Title"] = "Search for local family support and services";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-4">Search for local family support and services</h1>

        <p>Use your postcode to find support, activities and services for:</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>babies</li>
            <li>children</li>
            <li>young people up to age 19 (or up to age 25 with special education needs or disabilities)</li>
            <li>parents and carers</li>
        </ul>

        <p>As this service is new, not all local area services will be listed. 
            If there are no listings in your area yet, you will be signposted to your council website.</p>

        <p>Some services are only available to local residents.</p>

@*        <form action="results" method="post" class="search__form_2" novalidate data-validate='my-form-validation'>  *@

            <div class="govuk-form-group">
                <label class="govuk-label govuk-label--s" for="postcode-services">
                    Enter postcode
                </label>

                <input class="govuk-input govuk-input--width-10" id="postcode-services" name="postcode-services" type="text">
            </div>

            <button class="govuk-button" data-module="govuk-button">Search</button>
  
@*        </form> *@
    </div>
</div>